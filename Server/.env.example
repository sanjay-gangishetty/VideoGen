# Database Configuration
# MySQL connection string format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/videogen"

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# Video Generation Services - HeyGen
HEYGEN_API_KEY=your-heygen-api-key-here
HEYGEN_API_ENDPOINT=https://api.heygen.com/v1
HEYGEN_TIMEOUT=30000

# Video Generation Services - Google Veo 3
VEO3_API_KEY=your-google-veo3-api-key-here
VEO3_API_ENDPOINT=https://generativelanguage.googleapis.com/v1
VEO3_PROJECT_ID=your-project-id
VEO3_TIMEOUT=60000

# Video Generation Services - Kie.ai
KIE_API_KEY=your-kie-api-key-here
KIE_API_ENDPOINT=https://api.kie.ai/v1
KIE_TIMEOUT=60000

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Credit Configuration
INITIAL_CREDITS=10

# Test Mode (set to 'true' to allow unauthenticated requests for testing)
TEST_MODE=false

# Payment Gateway Configuration
# Stripe API Keys (Get from: https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
# Stripe Webhook Secret (Get from: https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# Payment Settings
PAYMENT_PROVIDER=stripe
PAYMENT_CURRENCY=USD

# Payment Redirect URLs
PAYMENT_SUCCESS_URL=http://localhost:5173/payment/success
PAYMENT_CANCEL_URL=http://localhost:5173/payment/cancel
