// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enums
enum ServiceType {
  HEYGEN
  VEO3
  KIE
}

enum VideoStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// Models
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  phone     String?
  image     String?  // Profile picture URL (optional)

  // Google OAuth fields
  googleId      String?  @unique
  accessToken   String?  @db.Text
  refreshToken  String?  @db.Text

  // Relations
  wallet    Wallet?
  videoLogs VideoLog[]
  payments  Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([googleId])
}

model Wallet {
  id               Int      @id @default(autoincrement())
  userId           Int      @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  currentBalance   Int      @default(100)
  totalCreditsUsed Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VideoLog {
  id              Int          @id @default(autoincrement())
  userId          Int
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  service         ServiceType
  status          VideoStatus  @default(PENDING)
  videoUrl        String?      @db.Text
  creditsConsumed Int

  // Optional fields
  errorMessage    String?      @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Payment {
  id                 Int            @id @default(autoincrement())
  userId             Int
  user               User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  amount             Decimal        @db.Decimal(10, 2)
  currency           String         @default("USD")
  creditsAwarded     Int
  status             PaymentStatus  @default(PENDING)

  // Payment gateway fields
  paymentGateway     String         // e.g., "stripe", "razorpay", etc.
  gatewayPaymentId   String?        @unique // payment_intent_xxx from Stripe
  gatewaySessionId   String?        @unique // checkout_session_xxx from Stripe

  // Metadata for extensibility
  metadata           Json?          // Store any additional provider-specific data

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([gatewayPaymentId])
  @@index([gatewaySessionId])
  @@index([createdAt])
}
